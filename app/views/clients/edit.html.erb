<%# cssは新規顧客登録のものを併用しています。
app/assets/stylesheets/clients/new.css %>
<%= render "shared/header" %>
<div class='client-page' id='client-page'>
  <div class='client-page__inner clearfix'>
    <div class='client-page__inner--left client-page__header'>
      <h2>顧客情報編集</h2>
    </div>
    <div class='client-page__inner--right user-form'>
      <%= form_with model: @client, local: true do |f|%>
       <%= render 'shared/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            名前
            <i>(全角)</i>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_area :last_name, class:"input-name", autofocus: true, placeholder:"例) 山田" %>
            <%= f.text_area :first_name, class:"input-name", placeholder:"例) 太郎" %>
          </div>
          <div class='field-label'>
            名前カナ
            <i>(全角)</i>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_area :last_name_kana, class:"input-name", placeholder:"例) ヤマダ" %>
            <%= f.text_area :first_name_kana, class:"input-name", placeholder:"例) タロウ" %>
          </div>
          <div class='field-label'>
            電話番号
            <i>(ハイフンなし、半角)</i>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :tel_number, placeholder:"例) 09012345678" %>
          </div>
          <div class='field-label'>
            見込み
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:prospect_id, Prospect.all, :id, :name, {}, { class:"prospect-select-box" }) %>
          </div>
          <div class='field-label'>
            最終対応日
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.date_field :date %>
          </div>
          <div class='field-label'>
            メモ
          </div>
          <div class='field-input'>
            <%= f.text_area :memo, class:"client-memo" %>
          </div>
          <div class='actions'>
            <%= f.submit "編集する", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>