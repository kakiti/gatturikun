<%= render "shared/header" %>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>アカウント編集</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
       <%= render 'shared/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            ニックネーム
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
          <div class='field-label'>
            電話番号
            <i>(ハイフンなし)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number, autofocus: true%>
          </div>
          <div class='field-label'>
            役職
          </div>
          <div class='field-input'>
            <%= f.collection_select(:position_id, Position.all, :id, :name, {}, { class:"select-box" })%>
          </div>
          <div class='field-label'>
            メールアドレス
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
          <div class='field-label'>
            現在のパスワード
          </div>
          <div class='field-input'>
            <%= f.password_field :current_password, autocomplete: "current-password"%>
          </div>
          <div class='field-label'>
            パスワード
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
          <div class='field-label'>
            パスワード
            <i>(確認用)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "アカウント編集", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
