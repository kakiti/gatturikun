<%= render "shared/header" %>
<div class='menber-details'>
  <h2 class='menber-details-title'>
    <%= @user.name %>さんの詳細
  </h2>
  <table class="detail-table" >
    <tbody>
      <tr>
        <th class="detail-item">役職</th>
        <td class="detail-value"><%= @user.position.name %></td>
      </tr>
      <tr>
        <th class="detail-item">メールアドレス</th>
        <td class="detail-value"><%= @user.email %></td>
      </tr>
      <tr>
        <th class="detail-item">電話番号</th>
        <td class="detail-value"><%= @user.phone_number %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class='menber-client-lists'>
  <h2 class='menber-client-lists-title'>
    <%= @user.name %>さんの顧客リスト
    </h2>
  <table class='client-table'>
    <tr class='client-table-th-tr'>
      <th class='client-table-th'>名前</th>
      <th class='client-table-th'>電話番号</th>
      <th class='client-table-th'>見込み</th>
      <th class='client-table-th'>最終対応日</th>
      <th class='client-table-th'>担当者</th>
    </tr>
    <% @user.clients.each do |client| %>
      <tr class='client-table-td-tr' data-id=<%= client.id %> >
        <td class="client-table-td" >
          <div> <%= client.last_name %><%= client.first_name %> </div>
        </td>
        <td class="client-table-td">
          <div> <%= client.tel_number %> </div>
          </td>
        <td class="client-table-td">
          <div> <%= client.prospect.name %> </div>
        </td>
        <td class="client-table-td">
          <div> <%= client.date.strftime('%m/%d') %> </div>
        </td>
        <td class="client-table-td">
          <div> <%= client.user.name %> </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<% if user_signed_in? && current_user.id == @user.id %>
  <div class="user-edit">
  <%= link_to '編集', edit_user_registration_path, class: "user-edit-btn" %>
  </div>
<% end %>

